<Window x:Class="CurrentlyListening.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        MinWidth="300" MinHeight="180"
        MaxWidth="600" MaxHeight="400"
        ResizeMode="CanResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Tom &#x00AB;TKoNoR&#x00BB;" VerticalAlignment="Center"
                   FontWeight="Bold" FontSize="16"  Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap">
            <Hyperlink NavigateUri="mailto:tkonorgaming@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                tkonorgaming@gmail.com
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Twitch:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBlock Grid.Row="2" Grid.Column="1" TextWrapping="Wrap">
            <Hyperlink NavigateUri="https://twitch.tv/tkonor" RequestNavigate="Hyperlink_RequestNavigate">
                https://twitch.tv/tkonor
            </Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="YouTube:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBlock Grid.Row="3" Grid.Column="1" TextWrapping="Wrap">
            <Hyperlink NavigateUri="https://www.youtube.com/@TKoNoR" RequestNavigate="Hyperlink_RequestNavigate">
                https://www.youtube.com/@TKoNoR
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>