<Window x:Class="CurrentlyListening.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:CurrentlyListening.Resources"
        Title="How to Use" Height="350" Width="550"
        ResizeMode="CanResize"
        MinHeight="250" MinWidth="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Border Background="#FFF" CornerRadius="8" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock x:Name="HowToUse"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="Help1" TextWrapping="Wrap" Margin="0,0,0,6" ></TextBlock>
                    
                    <TextBlock x:Name="Help2" TextWrapping="Wrap" Margin="0,0,0,6"></TextBlock>
                    
                    <TextBlock x:Name="Help3" TextWrapping="Wrap" Margin="0,0,0,6"></TextBlock>
                    
                    <TextBlock x:Name="Help4" TextWrapping="Wrap" Margin="0,0,0,6"></TextBlock>
                    
                    <TextBlock x:Name="Help5" TextWrapping="Wrap" Margin="0,0,0,6"></TextBlock>
                    
                    <TextBlock x:Name="HelpTip" TextWrapping="Wrap" Margin="0,10,0,0" FontStyle="Italic" Foreground="Gray"></TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
