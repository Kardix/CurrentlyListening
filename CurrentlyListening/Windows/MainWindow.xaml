<Window x:Class="CurrentlyListening.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CurrentlyListening by TKoNoR"
        Width="600" Height="250"
        MinWidth="500" MinHeight="200"
        MaxWidth="800" MaxHeight="400"
        SizeToContent="Height">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <StackPanel Margin="20,20,20,0">
        <Grid><TextBlock x:Name="TrackDisplay" Text="Track Display Options:" FontWeight="Bold" FontSize="14" Margin="0,0,160,10"/>
        <ComboBox x:Name="LanguageSelector"
                  Width="150"
                  Margin="0,0,0,0"
                  HorizontalAlignment="Right"
                  SelectionChanged="LanguageSelector_SelectionChanged">
            <ComboBoxItem Tag="en" Content="English" />
            <ComboBoxItem Tag="fr" Content="Français" />
            <ComboBoxItem Tag="es" Content="Español" />
            <ComboBoxItem Tag="de" Content="Deutsch" />
            <ComboBoxItem Tag="cs" Content="Čeština" />
            <ComboBoxItem Tag="pt" Content="Português" />
            <ComboBoxItem Tag="uk" Content="Українська" />
            <ComboBoxItem Tag="pl" Content="Polski" />
        </ComboBox>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox x:Name="ArtistCheckbox" Content="Artist" IsChecked="True" Margin="0,0,10,0"/>
            <CheckBox x:Name="TitleCheckbox" Content="Song Title" IsChecked="True" Margin="0,0,10,0"/>
            <CheckBox x:Name="TimeCheckbox" Content="Time (Progress/Duration)" IsChecked="True"/>
        </StackPanel>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="OutputPreview" Text="Output preview:" FontWeight="Bold" FontSize="12" Grid.Column="0" VerticalAlignment="Center"/>
            <Button x:Name="HelpButton" Content="Help"
                    Grid.Column="1"
                    Width="60"
                    Margin="10,0,0,0"
                    Click="HelpButton_Click"/>
        </Grid>
        <TextBox x:Name="OutputBox" IsReadOnly="True" FontSize="14" Height="40" />

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="UpdateDisplay" Content="Update Display"
                    Grid.Column="0"
                    Margin="0,0,5,0"
                    Click="UpdateDisplay_Click"/>

            <Button x:Name="LoginToSpotify" Content="Login to Spotify"
                    Grid.Column="1"
                    Margin="5,0,5,0"
                    Click="LoginButton_Click"/>

            <Button x:Name="OutputFileLocation" Content="Set Output File Location"
                    Grid.Column="2"
                    Margin="5,0,0,0"
                    Click="SetOutputFileButton_Click"/>
        </Grid>
        <CheckBox x:Name="UseCustomCredentialsCheckbox"
                  Content="Use custom Client ID and Secret"
                  Margin="0,10,0,0"
                  Checked="UseCustomCredentialsCheckbox_Checked"
                  Unchecked="UseCustomCredentialsCheckbox_Unchecked"/>

        <StackPanel x:Name="CustomCredentialsPanel"
                    Orientation="Vertical"
                    Margin="0,5,0,0"
                    Visibility="Collapsed">
            <!-- Client ID -->
            <Grid Margin="0,0,0,5">
                <TextBox x:Name="ClientIdTextBox"
                         VerticalContentAlignment="Center"
                         Padding="5" />
                <TextBlock x:Name="ClientIdText" Text="Client ID"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=ClientIdTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <!-- Client Secret -->
            <Grid>
                <TextBox x:Name="ClientSecretTextBox"
                         VerticalContentAlignment="Center"
                         Padding="5" />
                <TextBlock x:Name="ClientSecretText" Text="Client Secret"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=ClientSecretTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
        </StackPanel>
        <Label HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,10">
            <TextBlock>
                <Run x:Name="CreatedBy" Text="Created by " />
                <Hyperlink Click="ShowAboutWindow_Click">Tom "TKoNoR"</Hyperlink>
            </TextBlock>
            </Label>
        
    </StackPanel>
    
</Window>