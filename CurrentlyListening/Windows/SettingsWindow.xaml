<Window x:Class="CurrentlyListening.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="420" Height="180"
        MinWidth="380" MinHeight="170"
        MaxWidth="600" MaxHeight="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20,20,20,0">

        <TextBlock Text="Settings"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,12"/>

        <CheckBox x:Name="CloseShouldMinimize"
                  Content="Close window should minimize the app"
                  Margin="0,0,0,16"
                  Click="CloseShouldMinimize_OnClick"/>
        
        <CheckBox x:Name="StartMinimized"
                  Content="Start the app minimized"
                  Margin="0,0,0,16"
                  Click="StartMinimized_OnClick"/>
        

    </StackPanel>
</Window>